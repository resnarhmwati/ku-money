# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/ku-money

# JWT Secrets
# Generate secure random strings untuk production
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH=your_jwt_refresh_secret_key_here

# Email Service Configuration
# Gmail: gunakan App Password, bukan password biasa
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# Xendit Payment Gateway
XENDIT_KEY=your_xendit_secret_key_here
XENDIT_CALLBACK_TOKEN=your_xendit_callback_token_here

# Google OAuth Configuration
# Dapatkan dari Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here

# Client URL (Frontend URL)
# Digunakan untuk email verification links dan payment redirects
CLIENT_URL=http://localhost:5173
